---
import '@xz/fonts/serve/source-code-pro.css';
import 'leaflet/dist/leaflet.css';
import { description, title, TILES_URL } from '../common.ts';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
        <link rel="preconnect" href={ TILES_URL } />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={ Astro.generator } />
        <meta name="description" content={ description } />
        <title>{ title }</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
        font-family: Source Code Pro, monospace;
		margin: 0;
		width: 100%;
		height: 100%;
        overflow: hidden;
	}
</style>
