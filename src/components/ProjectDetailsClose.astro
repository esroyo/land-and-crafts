<button type="button" class="close-button" aria-label="Close panel">&times;</button>
<script>
  import { eventBus } from '../client.ts';
  class ProjectDetailsClose extends HTMLElement {
    connectedCallback() {
          this.addEventListener('click', (ev) => {
              ev.preventDefault();
              const detail = this.querySelector<HTMLElement>('project-details[data-project-selected=1')?.dataset;
              if (detail) {
                eventBus.dispatchEvent(new CustomEvent<DOMStringMap>(`project:details`, { detail }));
              }
        });
    }
  }
  customElements.define('project-details-close', ProjectDetailsClose);
</script>

<style>
.close-button {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background: white;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  line-height: 1;
  color: #555;
  transition: color 0.2s ease;
}

.close-button:hover {
  color: #000;
}
</style>
