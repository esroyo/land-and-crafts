---
import { render } from 'astro:content';
const { project } = Astro.props;
const { Content } = await render(project);
---
<project-details
    data-project-id={ project.id }
    data-project-coordinates={ project.data.coordinates }
    data-project-selected="0"
>
    <Content />
    <button class="close-button" aria-label="Close panel">&times;</button>
    <br />
    <a href={ `/#project:${project.id}` } class="copy-link" title="Copy link">ðŸ”— Copy link</a>
</project-details>

<script>
  import { eventBus } from '../client.ts';
  class ProjectDetails extends HTMLElement {
    connectedCallback() {
          this.addEventListener('click', (ev) => {
            if (ev.target?.matches('.close-button')) {
                ev.preventDefault();
                eventBus.dispatchEvent(new CustomEvent<DOMStringMap>(`project:details`, { detail: this.dataset }));
            } else if (ev.target?.matches('.copy-link')) {
                ev.preventDefault();
                navigator.clipboard.writeText(ev.target.href);
            }
        });
    }
  }
  customElements.define('project-details', ProjectDetails);
</script>

<style>
project-details {
  display: block;
  position: relative;
  padding: 2rem;

  &[data-project-selected="0"] {
      display: none;
  }
}

.copy-link {
    text-decoration: none;
}

.close-button {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background: transparent;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  line-height: 1;
  color: #555;
  transition: color 0.2s ease;
}

.close-button:hover {
  color: #000;
}
</style>
